<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.example.chen.cs160finalproject.EditPresentation">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:fontFamily="sans-serif-light"
            android:elevation="4dp"
            android:backgroundTint="#3366cc"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyword 1"
        android:fontFamily="sans-serif-light"
        android:id="@+id/keyword1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/startButton"
        android:layout_alignStart="@+id/titleTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyword 2"
        android:fontFamily="sans-serif-light"
        android:id="@+id/keyword2"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/startButton"
        android:layout_alignStart="@+id/titleTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyword 3"
        android:fontFamily="sans-serif-light"
        android:id="@+id/keyword3"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/startButton"
        android:layout_alignStart="@+id/titleTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:textColor="#000000"
        android:id="@+id/keyword1Input"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="140dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:fontFamily="sans-serif-light"
        android:ems="10"
        android:textColor="#000000"
        android:id="@+id/keyword2Input"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="140dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:fontFamily="sans-serif-light"
        android:ems="10"
        android:textColor="#000000"
        android:id="@+id/keyword3Input"
        android:layout_marginTop="245dp"
        android:layout_marginLeft="140dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:fontFamily="sans-serif-light"
        android:ems="3"
        android:id="@+id/minuteInput"
        android:gravity="center"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="105dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:fontFamily="sans-serif-light"
        android:id="@+id/colon"
        android:textSize="45dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="180dp"
        android:layout_toEndOf="@+id/minute" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:fontFamily="sans-serif-light"
        android:ems="3"
        android:id="@+id/secondInput"
        android:gravity="center"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="205dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Add Slide "
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:backgroundTint="#6699FF"
        android:textColor="#ffffff"
        android:id="@+id/addSlideButton"
        android:layout_marginTop="477dp"
        android:layout_marginLeft="20dp"
        android:layout_alignEnd="@+id/keyword3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Delete Slide "
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:backgroundTint="#6699FF"
        android:textColor="#ffffff"
        android:id="@+id/deleteSlideButton"
        android:layout_marginTop="477dp"
        android:layout_marginLeft="170dp"
        android:layout_alignEnd="@+id/keyword3Input" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:background="#6699FF"
        android:layout_marginTop="385dp"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/slides"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/defaultSlide"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1 "
                android:textSize="50dp"
                android:background="#3366cc"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </HorizontalScrollView>

    <include layout="@layout/content_edit_presentation" />

</android.support.design.widget.CoordinatorLayout>
