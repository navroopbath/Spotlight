<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.example.chen.cs160finalproject.EditPresentation">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:backgroundTint="#3366cc" app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:inputType="text"
        android:ems="7"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startButton"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:backgroundTint="#6699FF"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyword 1"
        android:id="@+id/keyword1"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/startButton"
        android:layout_alignStart="@+id/titleTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyword 2"
        android:id="@+id/keyword2"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/startButton"
        android:layout_alignStart="@+id/titleTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyword 3"
        android:id="@+id/keyword3"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/startButton"
        android:layout_alignStart="@+id/titleTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:textColor="#000000"
        android:id="@+id/keyword1Input"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="140dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:textColor="#000000"
        android:id="@+id/keyword2Input"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="140dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:textColor="#000000"
        android:id="@+id/keyword3Input"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="140dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="3"
        android:id="@+id/minuteInput"
        android:gravity="center"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="105dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:id="@+id/colon"
        android:textSize="50dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="180dp"
        android:layout_toEndOf="@+id/minute" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="3"
        android:id="@+id/secondInput"
        android:gravity="center"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="205dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Slide"
        android:textSize="25dp"
        android:backgroundTint="#6699FF"
        android:textColor="#ffffff"
        android:id="@+id/addSlideButton"
        android:layout_marginTop="487dp"
        android:layout_marginLeft="20dp"
        android:layout_alignEnd="@+id/keyword3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Slide"
        android:textSize="25dp"
        android:backgroundTint="#6699FF"
        android:textColor="#ffffff"
        android:id="@+id/deleteSlideButton"
        android:layout_marginTop="487dp"
        android:layout_marginLeft="170dp"
        android:layout_alignEnd="@+id/keyword3Input" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:background="#6699FF"
        android:layout_marginTop="400dp"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1 "
                android:textSize="50dp"
                android:background="#3366cc"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusoneMinute"
        android:text="+ 1"
        android:textSize="20dp"
        android:backgroundTint="#6699FF"
        android:textColor="#ffffff"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minusoneMinute"
        android:text="-  1"
        android:textSize="20dp"
        android:backgroundTint="#6699FF"
        android:textColor="#ffffff"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusoneSecond"
        android:text="+ 1"
        android:textSize="20dp"
        android:backgroundTint="#6699FF"
        android:textColor="#ffffff"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="285dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minusoneSecond"
        android:text="-  1"
        android:textSize="20dp"
        android:backgroundTint="#6699FF"
        android:textColor="#ffffff"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="285dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <include layout="@layout/content_edit_presentation" />

</android.support.design.widget.CoordinatorLayout>
